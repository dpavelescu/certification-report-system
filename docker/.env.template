# Docker Environment Configuration
# Copy this file to .env in the docker/ directory for local development
# DO NOT COMMIT .env files TO VERSION CONTROL

# Database Configuration
POSTGRES_DB=certreport
POSTGRES_USER=certuser
POSTGRES_PASSWORD=certpass_dev_only

# Application Configuration
DB_URL=jdbc:postgresql://postgres:5432/certreport
DB_USERNAME=certuser
DB_PASSWORD=certpass_dev_only

# Server Configuration
SERVER_PORT=8080

# Environment
ENVIRONMENT=development

# SSL Configuration (for production)
SSL_ENABLED=false
SSL_KEYSTORE_PATH=
SSL_KEYSTORE_PASSWORD=
SSL_KEYSTORE_TYPE=PKCS12
